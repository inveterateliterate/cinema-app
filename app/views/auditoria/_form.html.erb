<div class="container">
  <div class="form-group">
    <%= form_for(@auditorium) do |f| %>
      <% if auditorium.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <label><%= pluralize(auditorium.errors.count, "error") %> prohibited this auditorium from being saved:</label>

            <ul>
              <% auditorium.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="row">
        <div class="col-xs-2">
          <label for="capcity">Capacity</label>
        </div>
        <div class="col-xs-2">
          <%= f.text_field :capacity %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-xs-2">
          <button><%= link_to 'Back', auditoria_path %></button>
        </div>
        <div class="col-xs-2">
          <%= f.submit %> 
        </div>   
      </div>
    <% end %>
  </div>
</div>
