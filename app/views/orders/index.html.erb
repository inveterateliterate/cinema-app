<h1>Order History</h1>

  

<div class="container">
<p>Click on a movie title to view all orders for that movie</p>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Email</th>
      <th>Movie</th>
      <th>Showing</th>
      <th>Sale</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
      <td><%= order.created_at.strftime("%-m/%-d/%Y") %></td>
        <td><%= order.cust_last %></td>
        <td><%= order.cust_first %></td>
        <td><%= order.cust_email %></td>
        <td><%= link_to "#{Movie.find(Showing.find(order.showing_id).movie_id).title}", orders_by_movie_path(Showing.find(order.showing_id).movie_id) %></td>

        <td><%= "#{Showing.find(order.showing_id).showtime.strftime("%-m/%-d/%Y")}   #{Showing.find(order.showing_id).showtime.strftime("%l:%M %p")}" %></td>
        <td><%= number_to_currency(order.sale) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
