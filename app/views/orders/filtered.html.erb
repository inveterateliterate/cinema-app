<h1><%= "Order History for #{@movie.title}" %></h1>

<div class="container">

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Email</th>
      <th>Movie</th>
      <th>Showing</th>
      <th>Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <% if !order.nil? %>
      <% order.each do |x| %>
      <tr>
        <td><%= x.created_at.strftime("%-m/%-d/%Y") %></td>
        <td><%= x.cust_last %></td>
        <td><%= x.cust_first %></td>
        <td><%= x.cust_email %></td>
        <td><%= @movie.title %></td>
        <td><%= "#{Showing.find(x.showing_id).date.strftime("%-m/%-d/%Y")}   #{Showing.find(x.showing_id).showtime.strftime("%l:%M %p")}" %></td>
        <td><%= number_to_currency(x.sale) %></td>
      </tr>
      <% end %>
    <% end %>
    <% end %>
  </tbody>
</table>

<div class="container">
  <%= link_to 'Back', orders_path %>
</div>

</div>