<p id="notice"><%= notice %></p>

<h1>Showings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Showtime</th>
      <th>Movie</th>
      <th>Auditorium</th>
      <th>Avail seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @showings.each do |showing| %>
      <tr>
        <td><%= showing.date %></td>
        <td><%= showing.showtime %></td>
        <td><%= showing.movie %></td>
        <td><%= showing.auditorium %></td>
        <td><%= showing.avail_seats %></td>
        <td><%= link_to 'Show', showing %></td>
        <td><%= link_to 'Edit', edit_showing_path(showing) %></td>
        <td><%= link_to 'Destroy', showing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Showing', new_showing_path, remote: true %>
