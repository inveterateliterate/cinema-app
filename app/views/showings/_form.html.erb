<%= form_for(showing) do |f| %>
  <% if showing.errors.any? %>
    <div id="error_explanation">
    <div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
      <label><%= pluralize(showing.errors.count, "error") %> prohibited this showing from being saved:</label>

      <ul>
      <% showing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <% end %>


<div class="container">
  <div class="form-group">
  <%= form_for(@showing) do |f| %>
  


  <div class="row">
    <div class="col-xs-2">
      <label for="date">Date</label>
    </div>
  <div class="col-xs-2">
    <%= f.date_field :date %>
    </div>
    </div>

     <div class="row">
    <div class="col-xs-2">
      <label for="showtime">Showtime</label>
    </div>
  <div class="col-xs-2">
    <%= f.time_field :showtime %>
    </div>
    </div>


  <div class="row">
    <div class="col-xs-2">
      <label for="Movie">Movie</label>
    </div>
  <div class="col-xs-2">
    <%= f.collection_select(:movie_id, Movie.all, :id, :title) %>
    </div>
    </div>

    <div class="row">
    <div class="col-xs-2">
      <label for="Auditorium">Auditorium</label>
    </div>
  <div class="col-xs-2">
    <%= f.collection_select(:auditorium_id, Auditorium.all, :id, :id) %>
    </div>
    </div>

    


  <div class="row">
    <div class="col-xs-2 offset-col-xs-2">
     <%= f.submit %>
    </div>   
  </div>
<% end %>

<div class="row">
 <div class="col-xs-1">
   <%= link_to 'Back', showings_path %>
  </div>
  <div class="col-xs-2">
   <%= link_to 'Edit Auditorium', auditoria_path %>
  </div>
  </div>

</div>
</div>
