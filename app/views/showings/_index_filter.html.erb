<div class="main">
<div class="container">

<div class="row">
<div class="col-xs-2">
<ul class="nav nav-pills">
  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
    Movies<span class="caret"></span>
    </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'All', showings_path %></li>
        <li role="presentation" class="divider"></li>
        <% @movies.each do |movie| %>
        <li><%= link_to "#{movie.title}", showings_by_movie_path(movie.id) %></li>
        <%end%>
      </ul>
  </li>
</ul>
</div>
<div class="col-xs-2">
<ul class="nav nav-pills">
  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
    Auditoria<span class="caret"></span>
    </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'All', showings_path %></li>
        <li role="presentation" class="divider"></li>
        <% @auditoria.each do |auditorium| %>
        <li><%= link_to "#{auditorium.id}", showings_by_auditorium_path(auditorium.id) %></li>
        <%end%>
      </ul>
  </li>
</ul>
</div>
</div>

<% if !@showings.empty? %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Showtime</th>
      <th>Movie</th>
      <th>Auditorium</th>
      <th>Available Seats</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @showings.each do |showing| %>
      <tr>
        <td><%= showing.showtime.strftime("%-m/%-d/%Y") %></td>
        <td><%= showing.showtime.strftime("%l:%M %p") %></td>
        <td><%= Movie.find(showing.movie_id).title %></td>
        <td><%= showing.auditorium_id %></td>
        <td><%= showing.avail_seats %></td>
        <td><%= link_to 'Edit', edit_showing_path(showing) %></td>
        <td><%= link_to 'Destroy', showing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  <%else%>
  <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>No showings found</td>        
      </tr>
  </tbody>
</table>


<%end%>

</div>
</div>